<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:id="@+id/textTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="10 Mei 2016 16:30"
        android:textSize="12sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textTanggal"
        android:layout_marginBottom="5dp"
        android:background="@color/colorBlueSoft"></View>

    <TextView
        android:id="@+id/textOrderType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view"
        android:layout_alignStart="@+id/view"
        android:layout_below="@+id/view"
        android:text="Deposit" />

    <TextView
        android:id="@+id/textFromTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view"
        android:layout_alignEnd="@+id/view"
        android:layout_alignRight="@+id/view"
        android:text="Bank BCA"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/view"
        android:layout_alignRight="@+id/view"
        android:layout_alignTop="@+id/textOrderType"
        android:text="Pending"
        android:textAppearance="@android:style/TextAppearance.Material.Small" />

    <TextView
        android:id="@+id/textIDR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textOrderType"
        android:layout_alignStart="@+id/textOrderType"
        android:layout_alignTop="@+id/textUSD"
        android:layout_marginRight="5dp"
        android:text="Rp150.350"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:id="@+id/textUSD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/ 5.00 USD"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:layout_below="@+id/textOrderType"
        android:layout_toRightOf="@+id/textIDR"
        android:layout_toEndOf="@+id/textIDR" />

</RelativeLayout>